@model IEnumerable<ProjetoPetMedDigital.Models.Usuario>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Senha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdColaborador)
            </th>
            @* REMOVIDO: Campo Id (BaseModel) *@
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CadastroColaborador)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Senha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdColaborador)
                </td>
                @* REMOVIDO: Campo Id (BaseModel) *@
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @(item.CadastroColaborador?.Nome) @* Exibe o nome do colaborador, se existir *@
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Login">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Login">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Login">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>