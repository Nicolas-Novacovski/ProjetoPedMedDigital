@model IEnumerable<dynamic> 

@{
    ViewData["Title"] = "Usuários do Sistema";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Lista de Usuários do Sistema</h1>

<p>
    <a href="/Identity/Account/Register" class="btn btn-primary">Registrar Novo Usuário Identity</a>
</p>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Login (UserName)</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Colaborador Associado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.User.UserName
            </td>
            <td>
                @item.User.Email
            </td>
            <td>
                @item.User.PhoneNumber
            </td>
            <td>
                @(item.Colaborador?.Nome ?? "N/A")
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.User.Id" class="btn btn-sm btn-secondary">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.User.Id" class="btn btn-sm btn-danger">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>