@model ProjetoPetMedDigital.Models.Veterinario

@{
    ViewData["Title"] = "Detalhes do Veterinário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-3">Detalhes do Veterinário</h1>

<div>
    <h4>Veterinario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeVeterinario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeVeterinario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Especialidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Especialidade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CadastroColaborador)
        </dt>
        <dd class = "col-sm-10">
            @(Model.CadastroColaborador?.Nome) @* Exibe o nome do colaborador, se existir *@
        </dd>
        @* REMOVIDO: Campo Id (BaseModel) *@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
    </dl>
</div>
<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.IdVeterinario" class="btn btn-warning">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
</div>