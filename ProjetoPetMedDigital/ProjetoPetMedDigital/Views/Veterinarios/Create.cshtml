@model ProjetoPetMedDigital.Models.Veterinario

@{
    ViewData["Title"] = "Novo Veterinário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-3">Novo Veterinário</h1>

<h4>Veterinario</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* REMOVIDO: Campo IdVeterinario (PK, auto-gerado) *@
            <div class="form-group">
                <label asp-for="NomeVeterinario" class="control-label"></label>
                <input asp-for="NomeVeterinario" class="form-control" />
                <span asp-validation-for="NomeVeterinario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Especialidade" class="control-label"></label>
                <input asp-for="Especialidade" class="form-control" />
                <span asp-validation-for="Especialidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdColaborador" class="control-label"></label>
                <select asp-for="IdColaborador" class ="form-control" asp-items="ViewBag.IdColaborador"></select>
                <span asp-validation-for="IdColaborador" class="text-danger"></span>
            </div>
            @* REMOVIDO: Campo Id (BaseModel) *@
            @* REMOVIDO: Campo CreatedAt *@
            <div class="form-group mt-3">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-link">Voltar para a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}