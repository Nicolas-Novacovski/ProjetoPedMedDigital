@model ProjetoPetMedDigital.Models.Veterinario

@{
    ViewData["Title"] = "Novo Veterinário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row d-flex justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header">
                <h3 class="mb-0">Novo Veterinário</h3>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="NomeVeterinario" class="form-label"></label>
                            <input asp-for="NomeVeterinario" class="form-control" />
                            <span asp-validation-for="NomeVeterinario" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Especialidade" class="form-label"></label>
                            <input asp-for="Especialidade" class="form-control" />
                            <span asp-validation-for="Especialidade" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Telefone" class="form-label"></label>
                            <input asp-for="Telefone" class="form-control" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Campo de Colaborador Corrigido -->
                    <div class="mb-3">
                        <label asp-for="IdColaborador" class="form-label">Colaborador Associado</label>
                        <select asp-for="IdColaborador" class="form-select" asp-items="ViewBag.IdColaborador">
                            <option value="">-- Selecione um Colaborador --</option>
                        </select>
                        <span asp-validation-for="IdColaborador" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
                        <button type="submit" class="btn text-white" style="background-color: #1e6091;">Criar Veterinário</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
