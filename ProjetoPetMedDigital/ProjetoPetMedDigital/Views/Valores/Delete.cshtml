@model ProjetoPetMedDigital.Models.Valor

@{
    ViewData["Title"] = "Excluir Valor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-3">Excluir Valor</h1>

<h3>Tem certeza que deseja excluir este valor?</h3>
<div>
    <h4>Valor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorProcedimento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorProcedimento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoPagamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoPagamento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorReceita)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorReceita)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorSaida)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorSaida)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Salario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Salario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CompraProdutos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompraProdutos)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Servico)
        </dt>
        <dd class = "col-sm-10">
            @(Model.Servico?.NomeServico)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class = "col-sm-10">
            @(Model.Cliente?.NomeResponsavel)
        </dd>
        @* REMOVIDO: Campo Id (BaseModel) *@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdValor" /> @* PK: MANTIDO, MAS COMO HIDDEN *@
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
    </form>
</div>