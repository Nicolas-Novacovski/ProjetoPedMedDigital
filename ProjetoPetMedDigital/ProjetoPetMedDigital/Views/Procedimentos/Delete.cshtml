@model ProjetoPetMedDigital.Models.Procedimento

@{
    ViewData["Title"] = "Excluir Procedimento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-3">Excluir Procedimento</h1>

<h3>Tem certeza que deseja excluir este procedimento?</h3>
<div>
    <h4>Procedimento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeProcedimento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeProcedimento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ItemEstoque)
        </dt>
        <dd class = "col-sm-10">
            @(Model.ItemEstoque?.NomeProduto)
        </dd>
        @* REMOVIDO: Campo Id (BaseModel) *@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdProcedimento" /> @* PK: MANTIDO, MAS COMO HIDDEN *@
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
    </form>
</div>