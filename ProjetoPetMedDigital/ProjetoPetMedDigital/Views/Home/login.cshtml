@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Petmed Digital - Login</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" />
    <link rel="stylesheet" href="~/css/login.css" />
    <script>
        function fazerLogin(event) {
            event.preventDefault();

            var usuario = document.querySelector('[name="usuario"]').value;
            var senha = document.querySelector('[name="senha"]').value;

            if (usuario === "LeoAdmin" && senha === "Veter021010") {
                window.location.href = "@Url.Action("Index", "Home")";
            } else {
                alert("Usuário ou senha incorretos!");
            }
        }
    </script>
</head>
<body>
    <div class="logo">
        <img src="~/images/dog com lingua .png" alt="Logo PetMed" />
    </div>

    <div class="login-box">
        <h2>Petmed Digital</h2>
        <form onsubmit="fazerLogin(event)">
            <input type="text" name="usuario" placeholder="Usuário" style="text-align: left;" /><br />
            <input type="password" name="senha" placeholder="Senha" style="text-align: left;" /><br />
            <input type="submit" value="Entrar" />
        </form>

    </div>
</body>
</html>