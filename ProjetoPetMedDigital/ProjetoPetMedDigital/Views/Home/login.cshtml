@{
    Layout = null; // Esta View não usa o _Layout.cshtml, por ser uma página de login independente
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Petmed Digital - Login</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" />
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <div class="logo">
        <img src="~/images/dog com lingua .png" alt="Logo PetMed" />
    </div>

    <div class="login-box">
        <h2>Petmed Digital</h2>

        @* Exibe a mensagem de erro se existir *@
        @if (TempData["ErrorMessage"] != null)
        {
            <p style="color: red; margin-bottom: 15px;">@TempData["ErrorMessage"]</p>
        }

        @* O formulário agora envia dados para a ação Login do HomeController via POST *@
        <form asp-action="Login" method="post">
            @* name="usuario" e name="senha" correspondem aos parâmetros da ação Login(string usuario, string senha) no controller *@
            <input type="text" name="usuario" placeholder="Usuário" style="text-align: left;" /><br />
            <input type="password" name="senha" placeholder="Senha" style="text-align: left;" /><br />
            <input type="submit" value="Entrar" />
        </form>

    </div>
</body>
</html>