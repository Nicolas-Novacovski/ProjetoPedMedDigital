@model IEnumerable<ProjetoPetMedDigital.Models.Agendamento>

@{
    ViewData["Title"] = "Agendamentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Lista de Agendamentos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Agendamento</a>
</p>
<table class="table table-hover table-striped"> @* Classes Bootstrap para tabelas *@
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataAgendamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraAgendamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observacoes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Veterinario)
            </th>
            @* REMOVIDO: Campo Id (BaseModel) *@
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataAgendamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraAgendamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observacoes)
            </td>
            <td>
                @(item.Paciente?.NomeCachorro)
            </td>
            <td>
                @(item.Veterinario?.NomeVeterinario)
            </td>
            @* REMOVIDO: Campo Id (BaseModel) *@
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAgendamento" class="btn btn-sm btn-info">Editar</a> | @* Botões estilizados *@
                <a asp-action="Details" asp-route-id="@item.IdAgendamento" class="btn btn-sm btn-secondary">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdAgendamento" class="btn btn-sm btn-danger">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>