@model ProjetoPetMedDigital.Models.Agendamento

@{
    ViewData["Title"] = "Novo Agendamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row d-flex justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header">
                <h3 class="mb-0">Novo Agendamento</h3>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <!-- Campo para selecionar o Paciente -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="IdPaciente" class="form-label">Paciente</label>
                            <select asp-for="IdPaciente" class="form-select" asp-items="ViewBag.IdPaciente">
                                <option value="">-- Selecione um Paciente --</option>
                            </select>
                            <span asp-validation-for="IdPaciente" class="text-danger"></span>
                        </div>

                        <!-- Campo para selecionar o Veterinário -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="IdVeterinario" class="form-label">Veterinário</label>
                            <select asp-for="IdVeterinario" class="form-select" asp-items="ViewBag.IdVeterinario">
                                <option value="">-- Selecione um Veterinário --</option>
                            </select>
                            <span asp-validation-for="IdVeterinario" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DataAgendamento" class="form-label"></label>
                            <input asp-for="DataAgendamento" class="form-control" type="date" />
                            <span asp-validation-for="DataAgendamento" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="HoraAgendamento" class="form-label"></label>
                            <input asp-for="HoraAgendamento" class="form-control" type="time" />
                            <span asp-validation-for="HoraAgendamento" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Observacoes" class="form-label"></label>
                        <textarea asp-for="Observacoes" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Observacoes" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
                        <button type="submit" class="btn text-white" style="background-color: #1e6091;">Criar Agendamento</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
