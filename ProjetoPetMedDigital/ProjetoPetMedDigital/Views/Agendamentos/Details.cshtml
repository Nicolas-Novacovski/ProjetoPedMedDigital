@model ProjetoPetMedDigital.Models.Agendamento

@{
    ViewData["Title"] = "Detalhes do Agendamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-3">Detalhes do Agendamento</h1>

<div>
    <h4>Agendamento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataAgendamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataAgendamento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HoraAgendamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HoraAgendamento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Observacoes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Observacoes)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Paciente)
        </dt>
        <dd class = "col-sm-10">
            @(Model.Paciente?.NomeCachorro) @* Exibe o nome, não o ID *@
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Veterinario)
        </dt>
        <dd class = "col-sm-10">
            @(Model.Veterinario?.NomeVeterinario) @* Exibe o nome, não o ID *@
        </dd>
        @* REMOVIDO: Campo Id (BaseModel) *@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
    </dl>
</div>
<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.IdAgendamento" class="btn btn-warning">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
</div>