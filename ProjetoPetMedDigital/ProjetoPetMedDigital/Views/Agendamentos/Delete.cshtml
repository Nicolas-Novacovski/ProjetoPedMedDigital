@model ProjetoPetMedDigital.Models.Agendamento

@{
    ViewData["Title"] = "Excluir Agendamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-3">Excluir Agendamento</h1>

<h3>Tem certeza que deseja excluir este agendamento?</h3> @* Mensagem mais clara *@
<div>
    <h4>Agendamento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataAgendamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataAgendamento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HoraAgendamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HoraAgendamento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Observacoes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Observacoes)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Paciente)
        </dt>
        <dd class = "col-sm-10">
            @(Model.Paciente?.NomeCachorro)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Veterinario)
        </dt>
        <dd class = "col-sm-10">
            @(Model.Veterinario?.NomeVeterinario)
        </dd>
        @* REMOVIDO: Campo Id (BaseModel) *@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdAgendamento" /> @* PK: MANTIDO, MAS COMO HIDDEN *@
        <input type="submit" value="Excluir" class="btn btn-danger"> | @* Texto do botão *@
        <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
    </form>
</div>