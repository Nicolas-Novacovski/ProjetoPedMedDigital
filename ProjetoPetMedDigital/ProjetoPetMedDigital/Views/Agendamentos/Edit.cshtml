@model ProjetoPetMedDigital.Models.Agendamento

@{
    ViewData["Title"] = "Editar Agendamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-3">Editar Agendamento</h1>

<h4>Agendamento</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdAgendamento" /> @* PK: MANTIDO, MAS COMO HIDDEN *@
            
            <div class="form-group">
                <label asp-for="IdPaciente" class="control-label"></label>
                <select asp-for="IdPaciente" class ="form-control" asp-items="ViewBag.IdPaciente"></select>
                <span asp-validation-for="IdPaciente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdVeterinario" class="control-label"></label>
                <select asp-for="IdVeterinario" class ="form-control" asp-items="ViewBag.IdVeterinario"></select>
                <span asp-validation-for="IdVeterinario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataAgendamento" class="control-label"></label>
                <input asp-for="DataAgendamento" class="form-control" />
                <span asp-validation-for="DataAgendamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraAgendamento" class="control-label"></label>
                <input asp-for="HoraAgendamento" class="form-control" />
                <span asp-validation-for="HoraAgendamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observacoes" class="control-label"></label>
                <textarea asp-for="Observacoes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>
            @* REMOVIDO: Campo Id (BaseModel) *@
            @* REMOVIDO: Campo CreatedAt *@
            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-link">Voltar para a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}