@model ProjetoPetMedDigital.Models.AgendaVeterinario

@{
    ViewData["Title"] = "Nova Agenda Veterinário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-3">Nova Agenda Veterinário</h1>

<h4>AgendaVeterinario</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* REMOVIDO: Campo IdAgendaVeterinario (PK, auto-gerado) *@
            <div class="form-group">
                <label asp-for="IdVeterinario" class="control-label"></label>
                <select asp-for="IdVeterinario" class ="form-control" asp-items="ViewBag.IdVeterinario"></select>
                <span asp-validation-for="IdVeterinario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFim" class="control-label"></label>
                <input asp-for="DataFim" class="form-control" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPaciente" class="control-label"></label>
                <select asp-for="IdPaciente" class ="form-control" asp-items="ViewBag.IdPaciente"></select>
                <span asp-validation-for="IdPaciente" class="text-danger"></span>
            </div>
            @* REMOVIDO: Campo Id (BaseModel) *@
            @* REMOVIDO: Campo CreatedAt *@
            <div class="form-group mt-3">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-link">Voltar para a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}