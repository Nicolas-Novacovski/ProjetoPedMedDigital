@model ProjetoPetMedDigital.Models.Servico

@{
    ViewData["Title"] = "Detalhes do Serviço";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-3">Detalhes do Serviço</h1>

<div>
    <h4>Servico</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoVenda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoVenda)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeServico)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeServico)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Hora)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hora)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrecoVenda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecoVenda)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Agendamento)
        </dt>
        <dd class = "col-sm-10">
            @(Model.Agendamento?.IdAgendamento) @* Exibe o ID do agendamento, se existir *@
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ItemEstoque)
        </dt>
        <dd class = "col-sm-10">
            @(Model.ItemEstoque?.NomeProduto) @* Exibe o nome do item de estoque, se existir *@
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class = "col-sm-10">
            @(Model.Valor?.ValorProcedimento) @* Exibe o valor do procedimento, se existir *@
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Veterinario)
        </dt>
        <dd class = "col-sm-10">
            @(Model.Veterinario?.NomeVeterinario) @* Exibe o nome do veterinário, se existir *@
        </dd>
        @* REMOVIDO: Campo Id (BaseModel) *@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
    </dl>
</div>
<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.IdServico" class="btn btn-warning">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
</div>